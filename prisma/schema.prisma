generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model mockInterview {
  id            Int     @id @default(autoincrement())
  jsonMockResp  String
  jobPosition   String
  jobDesc       String
  jobExperience String
  createdBy     String
  createdAt     String?
  mockId        String  @unique
}

model UserAnswer {
  id            Int    @id @default(autoincrement())
  mockIdRef     String @unique
  question      String
  correctAnswer String
  userAnswer    String
  feedback      String
  rating        String
  userEmail     String
  createdAt     String
}
